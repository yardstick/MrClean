<h1> Add New Employee </h1>

<%= form_for :employee do |form| %>
  <div>
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name %>
  </div>
 
  <div>
    <%= form.label :last_name %><br>
    <%= form.text_field :last_name %>
  </div>

  <div>
    <%= form.label :email%><br>
    <%= form.text_field :email %> 
  </div>

  <div>
    <%= form.label :phone%><br>
    <%= form.text_field :phone%>
  </div>
 
  <div>
    <%= form.submit %>
  </div>
<% end %>


