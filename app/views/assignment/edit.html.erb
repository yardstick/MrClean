<h1>Editing Week</h1>

<%= print_date(@week) %>

<% @assignments.each do |assignment| %>

  <%= form_for(assignment) do |form| %>
    <%= form.select :employee_id, options_for_select(@employee_arr, form.object.employee_id)%>
    <%= form.hidden_field :week_id, :value => @week.id %>
    <%= form.submit "Save Changes" %>
  <% end %>
<% end %>


<% if @assignments.count < 2 %>
  <div><%= link_to "Add assignment", new_assignment_path(:week => @week) %></div>
<%end%>